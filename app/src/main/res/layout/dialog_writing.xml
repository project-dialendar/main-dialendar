<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_date_writing"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:text="2020.03.25.tue"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_writing_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="372dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/tv_date_writing"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_writing_options" />

    <ImageButton
        android:id="@+id/btn_photo"
        android:layout_width="407dp"
        android:layout_height="411dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_writing"
        app:srcCompat="@drawable/cat" />

    <EditText
        android:id="@+id/et_writing_text"
        android:layout_width="410dp"
        android:layout_height="132dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_photo" />

</androidx.constraintlayout.widget.ConstraintLayout>