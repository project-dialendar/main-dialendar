<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activity.LockActivity">

    <ImageView
        android:id="@+id/iv_lock"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="95dp"
        app:layout_constraintEnd_toStartOf="@id/tl_lock"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_lock_24" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 입력해주세요"
        android:textColor="@color/textColor"
        android:fontFamily="@font/maruburittf"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_lock"
        app:layout_constraintBottom_toTopOf="@+id/ll_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tl_lock" />

    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tl_lock"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_password1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_baseline_password_blank"/>

        <ImageView
            android:id="@+id/iv_password2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_baseline_password_blank"/>

        <ImageView
            android:id="@+id/iv_password3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_baseline_password_blank"/>

        <ImageView
            android:id="@+id/iv_password4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_baseline_password_blank"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 잊어버렸어요! >"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        android:fontFamily="@font/maruburittf"
        android:layout_marginBottom="55dp"
        app:layout_constraintEnd_toStartOf="@+id/tl_lock"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TableLayout
        android:id="@+id/tl_lock"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2"
        android:layout_margin="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <Button
                android:id="@+id/btn_1"
                android:height="80dp"
                android:background="@color/background"
                android:text="1"
                android:textSize="24sp"
                android:textColor="@color/textColor"/>

            <Button
                android:id="@+id/btn_2"
                android:height="80dp"
                android:background="@color/background"
                android:text="2"
                android:textSize="24sp"
                android:textColor="@color/textColor"/>

            <Button
                android:id="@+id/btn_3"
                android:height="80dp"
                android:background="@color/background"
                android:text="3"
                android:textSize="24sp"
                android:textColor="@color/textColor"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_4"
                android:height="80dp"
                android:background="@color/background"
                android:text="4"
                android:textSize="24sp"
                android:textColor="@color/textColor"/>

            <Button
                android:id="@+id/btn_5"
                android:height="80dp"
                android:background="@color/background"
                android:text="5"
                android:textSize="24sp"
                android:textColor="@color/textColor"/>

            <Button
                android:id="@+id/btn_6"
                android:height="80dp"
                android:background="@color/background"
                android:text="6"
                android:textSize="24sp"
                android:textColor="@color/textColor"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_7"
                android:height="80dp"
                android:background="@color/background"
                android:text="7"
                android:textSize="24sp"
                android:textColor="@color/textColor"/>

            <Button
                android:id="@+id/btn_8"
                android:height="80dp"
                android:background="@color/background"
                android:text="8"
                android:textSize="24sp"
                android:textColor="@color/textColor"/>

            <Button
                android:id="@+id/btn_9"
                android:height="80dp"
                android:background="@color/background"
                android:text="9"
                android:textSize="24sp"
                android:textColor="@color/textColor"/>
        </TableRow>

        <TableRow>

            <Button
                android:height="80dp"
                android:text=""
                android:background="@color/background"
                android:textSize="24sp"
                android:textColor="@color/textColor"/>

            <Button
                android:id="@+id/btn_0"
                android:height="80dp"
                android:background="@color/background"
                android:text="0"
                android:textSize="24sp"
                android:textColor="@color/textColor"/>

            <Button
                android:id="@+id/btn_delete"
                android:height="80dp"
                android:text="del"
                android:background="@color/background"
                android:textSize="24sp"
                android:textColor="@color/textColor"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>